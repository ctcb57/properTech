@model properTech.Models.Unit

@{
    ViewData["Title"] = "UnitDetails";
}

<h1>UnitDetails</h1>

<div>
    <h4>This Unit</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UnitNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BathroomCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BathroomCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SquareFootage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SquareFootage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MonthlyRent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MonthlyRent)
        </dd>
        <dd>
            <img src="~/image/Samplephoo.jpg" style="width:200px;height:200px;"/>
        </dd>
    </dl>
</div>
<html>
<head>
    <style>
        #map {
            width: 100%;
            height: 400px;
            background-color: grey;
        }
    </style>
</head>
<body>
    <h3>Local Map</h3>
    @*Div element for the map*@
    <div id="map"></div>
    <script>
            function initMap() {
                var location = { lat: @Html.DisplayFor(model => model.Address.Latitude), lng: @Html.DisplayFor(model => model.Address.Longitude) };
                var map = new google.maps.Map(
                    document.getElementById('map'), { zoom: 15, center: location });
                var marker = new google.maps.Marker({ position: location, map: map });
            }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCvNx58z28nAtRCUDGJU6xi2qisdrmE1dQ&callback=initMap">
    </script>
</body>
</html>

@model properTech.Models.Property

@{
    ViewData["Title"] = "PropertyDetails";
}

<h1>Property Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.PropertyName)</h4>
    <hr />

</div>
<html>
<head>
    <style>
        #map {
            width: 100%;
            height: 400px;
            background-color: grey;
        }
    </style>
</head>
<body>
    <h3>Local Map</h3>
    @*Div element for the map*@
    <div id="map"></div>
    <script>
            function initMap() {
                var location = { lat: @Html.DisplayFor(model => model.Address.Latitude), lng: @Html.DisplayFor(model => model.Address.Longitude) };
                var map = new google.maps.Map(
                    document.getElementById('map'), { zoom: 15, center: location });
                var marker = new google.maps.Marker({ position: location, map: map });
            }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCvNx58z28nAtRCUDGJU6xi2qisdrmE1dQ&callback=initMap">
    </script>
</body>
</html>
<br />
<div>
    @Html.ActionLink("Back to List", "PropertyInformation")
</div>
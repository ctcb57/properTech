@model properTech.Models.Resident
@using Microsoft.Extensions.Options
@using System.Globalization
@inject IOptions<properTech.Data.StripeSettings> Stripe
@{
    ViewData["Title"] = "Payment";
}
<br />
<br />
<h1 style="text-align:center; text-decoration:underline">Payment Portal</h1>
<br />
<br />
<h4>Click the pay with card button to make your payment</h4>
<br />
<br />
<form action="/Residents/Charge" method="POST">
    @{ 
        var balance = Model.Balance * 1;
    }
    <article>
        <label>Amount: @balance.ToString("C", CultureInfo.CurrentCulture)</label>
    </article>
    <script src="//checkout.stripe.com/v2/checkout.js"
            class="stripe-button"
            data-key="@Stripe.Value.PublishableKey"
            data-locale="auto"
            data-description="Sample Charge"
            data-amount="">
    </script>
</form>


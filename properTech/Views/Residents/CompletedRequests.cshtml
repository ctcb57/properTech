@model IEnumerable<properTech.Models.MaintenanceRequest>
@{
    ViewData["Title"] = "CompletedRequests";
}
<br />
<br />
<h1 style="text-decoration:underline">Completed Maintenance Requests</h1>
<br />
<br />
<table class="table table-hover">
    <thead>
        <tr class="table" style="background-color: #3bb871">
            <th>
                Request Date
            </th>
            <th>
                Estimated Completion
            </th>
            <th>
                Completion
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tech)
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class="table-success">
            <th scope="row" style="background-color: #79D480">
                @Html.DisplayFor(modelItem => item.DateOfRequest)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedCompletionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActualCompletionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tech)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceStatus)
            </td>
            <td>
                <a asp-controller="MaintenanceRequests" asp-action="Details" asp-route-id="@item.RequestId">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>

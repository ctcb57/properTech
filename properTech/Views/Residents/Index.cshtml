@model IEnumerable<properTech.Models.Resident>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaseStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaseEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RenewedLease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentDueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LatePayment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaseStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaseEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RenewedLease)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LatePayment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ResidentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ResidentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ResidentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

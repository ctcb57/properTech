@model IEnumerable<properTech.Models.MaintenanceRequest>

@{
    ViewData["Title"] = "RequestsView";
}
<br />
<br />
<h1 style="text-align:center; text-decoration:underline">Maintenance Requests</h1>
<br />
<br />

<table class="table table-hover">
    <thead>
        <tr class="table" style="background-color: #3bb871">
            <th>
                Request Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resident)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                Status
            </th>
            <th>
                Message
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-success">
            <th scope="row" style="background-color: #79D480">
                @Html.DisplayFor(modelItem => item.DateOfRequest)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.resident)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <a asp-controller="MaintenanceRequests" asp-action="Accept" asp-route-id="@item.RequestId">Accept</a> |
                <a asp-controller="MaintenanceRequests" asp-action="Details" asp-route-id="@item.RequestId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

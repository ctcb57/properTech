@model IEnumerable<properTech.Models.Property>

@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<h1 style="text-align: center; text-decoration:underline">Property Portfolio</h1>
<br />
    <p style="text-decoration:underline"><a asp-action="Create">Create New Property</a></p>
<br />

<table class="table table-hover">
    <thead>
        <tr class="table" style="background-color: #3bb871">
            <th>
                @Html.DisplayNameFor(model => model.PropertyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-success">
                <th scope="row" style="background-color: #79D480">
                    <a asp-controller="Buildings" asp-action="Index" asp-route-id="@item.PropertyId">@item.PropertyName</a>
                </th>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PropertyId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PropertyId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PropertyId">Delete</a> |
                    <a asp-controller="Buildings" asp-action="Create" asp-route-id="@item.PropertyId">Create New Building</a>
                </td>
            </tr>
        }
    </tbody>
</table>
